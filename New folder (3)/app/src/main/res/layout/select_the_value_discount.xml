<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrund_home">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rediuse1"
        android:text="افزودن به سبد خرید"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/text">
    </TextView>
    <Button
        android:id="@+id/back"
        android:layout_width="22dp"
        android:layout_height="26dp"
        android:background="@drawable/back"
        android:onClick="Home"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/select_the_value" />

                <ImageView
                    android:id="@+id/Fruits_Vegetables_Image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/Fruits_Vegetables_Name"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="140dp"
                    android:textSize="30dp"
                    />
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#859BA0" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="220dp"
                    android:gravity="center"
                    android:text="متوسط"
                    android:textColor="#000000"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="هر کیلوگرم"
                    android:gravity="center"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="220dp"/>
                <TextView
                    android:id="@+id/Fruits_Vegetables_Mean"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="220dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="تومان"
                    android:gravity="center"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="220dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="235dp"
                    android:background="#FF0000"/>
                <ImageView
                    android:id="@+id/Decrease_maen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="227dp" />

                <TextView

                    android:id="@+id/textview_mean"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="225dp"
                    android:background="@drawable/radius_page4"
                    android:digits="0123456789"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
                <ImageView
                    android:id="@+id/Increase_maen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="227dp"
                    android:foreground="@android:drawable/ic_input_add" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginStart="200dp"
                    android:text="خوب"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="هر کیلوگرم"
                    android:gravity="center"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="260dp"/>
                <TextView
                    android:id="@+id/Fruits_Vegetables_Good"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="260dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="تومان"
                    android:gravity="center"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="260dp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="275dp"
                    android:background="#FF0000"/>
                <ImageView
                    android:id="@+id/Decrease_good"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="267dp" />

                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/textview_good"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/radius_page4"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="265dp"
                    android:digits="0123456789"/>
                <ImageView
                    android:id="@+id/Increase_good"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="267dp"
                    android:foreground="@android:drawable/ic_input_add" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginStart="200dp"
                    android:text="عالی"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="هر کیلوگرم"
                    android:gravity="center"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="300dp"/>
                <TextView
                    android:id="@+id/Fruits_Vegetables_Perfect"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="300dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="تومان"
                    android:gravity="center"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="300dp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="315dp"
                    android:background="#FF0000"/>
                <ImageView
                    android:id="@+id/Decrease_prefect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="307dp" />

                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/textview_prefect"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textSize="16dp"
                    android:textDirection="rtl"
                    android:background="@drawable/radius_page4"
                    android:layout_marginStart="39dp"
                    android:textColor="#000000"
                    android:layout_marginTop="305dp"
                    android:digits="0123456789"/>
                <ImageView
                    android:id="@+id/Increase_prefect"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="307dp"
                    android:foreground="@android:drawable/ic_input_add" />
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="350dp"
                    android:layout_marginStart="25dp"
                    android:background="#859BA0" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="360dp"
                    android:background="@drawable/radius_page4">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginStart="220dp"
                    android:text="قیمت کل :"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/Totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginStart="60dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="360dp"
                    android:gravity="center"
                    android:text="تومان" />

                <ImageView
                    android:id="@+id/discount"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/discount_diagonal" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/informaion"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mive_tarebar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="خواص:"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:id="@+id/informaion_mive_tarebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:textColor="#000000"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/buytobasket"
                android:layout_width="170dp"
                android:layout_height="50dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="     افزودن به سبد خرید"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/basket"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>