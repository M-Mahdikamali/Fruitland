<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/profile">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rediuse1"
        android:text="پروفایل"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/text">
    </TextView>


    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        android:paddingBottom="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text">
        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_border">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/orginal_profile"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUser"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="تغییر عکس پروفایل"
            android:textAllCaps="true"
            android:textColor="@color/address"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/moshakasat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rellay1">
        <LinearLayout
            android:id="@+id/moshakhasateprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/select_the_value"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="نام خانوادگی :"
                    android:layout_gravity="right"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/times"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="نام :"
                    android:layout_gravity="right"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/times"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="رمز :"
                    android:layout_gravity="right"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times"
                    android:layout_marginStart="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ایمیل :"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/times"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/changeinfo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/moshakasat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   تغییر مشخصات  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/changepassword"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@id/moshakasat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   تغییر رمز عبور  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   خروج   "
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/changepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/rellay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/select_the_value"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="رمز :"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times"
                android:layout_gravity="right"
                android:textDirection="rtl"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تکرار رمز :"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right"
                android:textDirection="rtl"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newpasswordre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/times"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/rellay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/select_the_value"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="نام خانوادگی :"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/times"
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام :"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textDirection="rtl"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/times"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ایمیل :"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textDirection="rtl"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/times"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/laghve"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/changepass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="   لغو  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/emaletaghirat"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@id/changepass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   اعمال تغییرات  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/laghve1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/changeInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="   لغو  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/emaletaghirat1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="140dp"
        app:layout_constraintTop_toBottomOf="@+id/changeInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   اعمال تغییرات  "
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="22dp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>