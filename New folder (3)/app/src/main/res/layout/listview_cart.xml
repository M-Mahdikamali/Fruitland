<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewcart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_sfv_page">
        </ImageView>
        <ImageView
            android:id="@+id/ax_mive_tarebar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="27.5dp"
            android:layout_marginTop="10dp">
        </ImageView>
        <ImageView
            android:layout_width="125dp"
            android:layout_height="1dp"
            android:layout_marginStart="12.5dp"
            android:layout_marginTop="110dp"
            android:background="#859BA0" />
        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/Name_mive_tarebar"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/cardViewcart"
        app:layout_constraintBottom_toTopOf="@id/keyfiat"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_sfv_page"
            />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="وزن کل :"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/vazne_kol"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:layout_width="138dp"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/keyfiat"
        app:layout_constraintEnd_toStartOf="@id/cardViewcart"
        app:layout_constraintBottom_toTopOf="@id/ghimate_kol"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_sfv_page"
            />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="کیفیت ها :"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/kifiatha"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:layout_width="138dp"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:id="@+id/ghimate_kol"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/cardViewcart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_sfv_page"
            />
        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="قیمت کل :"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/ghimateha"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:layout_width="138dp"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardViewcart"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
