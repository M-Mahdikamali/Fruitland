<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrund_delivery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/Topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layoutDirection="rtl"
        android:weightSum="2"
        android:background="@drawable/rediuse1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Scrolltarikhche"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rahgiri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="رهگیری"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="25dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/Imagecenter"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/light_gray" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tarikhche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="تاریخچه"
                android:gravity="center"
                android:textColor="#FFFFFFFF"
                android:textSize="25dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/Scrolltarikhche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Topbar"/>

    <ScrollView
        android:id="@+id/Scrollrahgiri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Topbar"
        app:layout_constraintVertical_bias="0.075">

        <LinearLayout
            android:id="@+id/Linerrahgiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Topbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:text=" ثبت سفارش"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="سفارش شما در سامانه به ثبت رسید."
                    android:textColor="#b21111"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:text=" در حال بررسی"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="سفارش شما در حال بررسی می باشد."
                    android:textColor="#b21111"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:text=" در حال آماده سازی"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="سفارش شما تایید و در حال بسته بندی می باشد."
                    android:textColor="#b21111"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:text=" ارسال"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="سفارش شما ارسال شد."
                    android:textColor="#b21111"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagesabtesefaresh"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:background="@drawable/order" />

                <ImageView
                    android:id="@+id/imagedarhalebaresi"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/pending" />

                <ImageView
                    android:id="@+id/darhaleamadesazi"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/preparing" />

                <ImageView
                    android:id="@+id/imagearsal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/sendproduct" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1.70"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dot1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/inactive_dot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/line1"
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:background="@color/inactive_dots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/inactive_dot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/line2"
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:background="@color/inactive_dots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/inactive_dot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/line3"
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:background="@color/inactive_dots" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/dot4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/inactive_dot" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>